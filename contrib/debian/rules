#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

#DEB_MAKE_CHECK_TARGET = test_ieuro
#build/ieurod::
#	$(if $(filter nocheck,$(DEB_BUILD_OPTIONS)),,src/test_ieuro)

DEB_INSTALL_EXAMPLES_ieurod += debian/examples/*
DEB_INSTALL_MANPAGES_ieurod += debian/manpages/*

%:
	dh --with bash-completion $@

override_dh_auto_build:
	cd src; $(MAKE) -f makefile.unix ieurod
	$(MAKE)

override_dh_auto_clean:
	if [ -f Makefile ]; then $(MAKE) clean; else rm -rf build/; rm -f ieuro-qt; fi
	cd src; $(MAKE) -f makefile.unix clean

override_dh_auto_configure:
	qmake ieuro-qt.pro USE_QRCODE=1

override_dh_auto_test:
	cd src; $(MAKE) -f makefile.unix test_ieuro
	src/test_ieuro

# Ensure wrapper is set executable
binary-post-install/ieurod:
	chmod +x $(cdbs_curdestdir)usr/bin/ieurod
binary-post-install/ieuro-qt:
	chmod +x $(cdbs_curdestdir)usr/bin/ieuro-qt
